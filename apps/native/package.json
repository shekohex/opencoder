		"expo-network": "~8.0.7",
		"expo-router": "~6.0.21",
		"expo-secure-store": "~15.0.8",
		"expo-server": "~1.0.5",
		"expo-splash-screen": "~31.0.13",
		"expo-status-bar": "~3.0.7",
		"expo-system-ui": "~6.0.7",
		"expo-web-browser": "~15.0.10",
		"react": "19.1.0",
