{
	"name": "opencoder",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/node": "^24"
		}
	},
	"scripts": {
		"check": "biome check --unsafe --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"typecheck": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F native web",
		"test": "turbo test"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"turbo": "^2.7.2",
		"@babel/runtime": "^7.28.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --unsafe --write ."
		]
	},
	"packageManager": "bun@1.3.1"
}
